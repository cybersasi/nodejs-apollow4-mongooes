{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "description": "Node project starter with Typescript, ESLint and Prettier",
  "main": "index.ts",
  "license": "MIT",
  "scripts": {
    "start": "set NODE_ENV=development & nodemon src/index.ts  --exec ts-node",
    "codegen": "graphql-codegen",
    "serve": "node dist/index.js",
    "lint": "eslint -c .eslintrc src",
    "clean": "rimraf dist/*",
    "build": " npm run clean && tsc",
    "buildOld": "npm run clean && babel src -d dist",
    "buildPro": "rm -rf dist && webpack --mode development",
    "build:digitalocean": "npm run build && npm run serve "
  },
  "dependencies": {
    "@apollo/server": "^4.7.5",
    "@graphql-tools/graphql-file-loader": "^8.0.0",
    "@graphql-tools/load": "^8.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "@prisma/client": "4.15.0",
    "apollo-server-express": "^3.12.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.12",
    "express": "^4.18.2",
    "graphql": "^16.7.1",
    "jsonwebtoken": "^9.0.1",
    "lodash": "^4.17.21",
    "mongoose": "^7.3.2",
    "mongoose-aggregate-paginate-v2": "^1.1.2",
    "mongoose-paginate-v2": "^1.8.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^4.0.1",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.17.7",
    "@types/node": "^18.15.2",
    "nodemon": "^2.0.21",
    "typescript": "^4.9.5"
  }
}
